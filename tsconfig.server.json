{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["ES2021"],
    "module": "CommonJS",
    "noImplicitAny": false,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "types": ["node"]
  },
  "include": ["src/server"]
}
